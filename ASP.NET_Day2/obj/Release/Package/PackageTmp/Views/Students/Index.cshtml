@model IEnumerable<ASP.NET_Day2.Models.Student>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h2>Index</h2>

    @using (Html.BeginForm())
    {
        <p>
            Find by name: @Html.TextBox("SearchString")
            <input type="submit" value="Search" />
        </p>
    }
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <input type="button" class="btn btn-primary" id="addData" value="Add" onclick="GetAddData();" />
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.NameSortParm })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstMidName)
            </th>
            <th>
                @Html.ActionLink("Enrollment Date", "Index", new { sortOrder = ViewBag.DateSortParm })
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstMidName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentDate)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "fas fa-edit", @style = "color:green" }) |
                    @Html.ActionLink(" ", "Details", new { id = item.ID }, new { @class = "fas fa-info", @style = "color:yellow" }) |
                    @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "fas fa-trash", @style = "color:red" })
                    <a class="btn btn-primary btn-sm" id="@item.ID" onclick="GetbyID(this.id)">Edit</a>
                    <a class="btn btn-warning btn-sm" id="@item.ID" onclick="GetDetail(this.id)">Details</a>
                    <a class="btn btn-danger btn-sm" id="@item.ID" onclick="GetbyDelID(this.id)"> Delete </a>
                    @Ajax.ActionLink("Delete", "DeletePartialView", new { id = item.ID },
                     new AjaxOptions
                          {
                              HttpMethod = "POST",
                              OnSuccess = "onDeleteSuccess",
                              Confirm = "Are you sure you want to delete this?"
                          }, new { @class = "fas fa-trash", id = "delete" })
                </td>
            </tr>
        }

    </table>
</div>
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"> Student Information</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
@section scripts{

    <script>
        function GetAddData() {
            $.get("@Url.Action("CreatePartial", "Students")",
                function (data) {
                    $('.modal-body').html(data);
                });
            $("#myModal").modal("show");
        }
        function AddData() {
            $.post("@Url.Action("CreatePartial", "Students")",
                function (data) {
                    $('.modal-body').html(data);
                });
                $("#myModal").modal("show");
        }
        function GetDetail(ID) {
              $.get("@Url.Action("DetailPartiview", "Students")/" + ID,
                function (data) {
                    $('.modal-body').html(data);
                });
                $("#myModal").modal("show");
        }
        function GetbyID(ID) {
              $.get("@Url.Action("EditPartilView", "Students")/" + ID,
                function (data) {
                    $('.modal-body').html(data);
                });
                $("#myModal").modal("show");
        }
        function EditData() {
             $.post("@Url.Action("EditPartilView", "Students")",
                function (data) {
                    $('.modal-body').html(data);
                });
                $("#myModal").modal("show");
        }
         function GetbyDelID(ID) {
              $.get("@Url.Action("GetByDeleteID", "Students")/" + ID,
                function (data) {
                    $('.modal-body').html(data);
                });
                $("#myModal").modal("show");
        }
        function Delete(ID) {
            $.post("@Url.Action("MyDeletePartial", "Students")/" + ID,
                function (data) {
                   $('.modal-body').html(data);
                });
            $("#myModal").modal("show");
        }
        function onDeleteSuccess() {
            window.location.reload(true);
        }

    </script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}
